<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/frameLayout3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Waiter.WaiterMainFragment">


        <TextView
            android:id="@+id/tv_Waiter_Table_Title"
            style="@style/HeaderText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:text="@string/waiter"
            android:textAllCaps="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/bt_Waiter_Table_Cancel"
            android:layout_width="48dp"
            android:layout_height="52dp"
            android:layout_marginEnd="16dp"
            android:backgroundTint="@color/cardview_shadow_end_color"
            android:drawableTop="@android:drawable/ic_menu_revert"
            app:iconPadding="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_Waiter_Table_Title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_Waiter_Table_Title"
            app:layout_constraintVertical_bias="0.571"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/tv_Waiter_Table_Detail_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Table: xxxx"
            android:textColor="@color/orange"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/tv_Waiter_Table_Title"
            app:layout_constraintStart_toStartOf="@+id/tv_Waiter_Table_Title"
            app:layout_constraintTop_toBottomOf="@+id/tv_Waiter_Table_Title" />

        <TextView
            android:id="@+id/tv_Waiter_Table_Detail_Order_Number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="140dp"
            android:text="0"
            android:textColor="@color/orange"
            android:textSize="60sp"
            app:layout_constraintEnd_toEndOf="@+id/tv_Waiter_Table_Detail_Name"
            app:layout_constraintHorizontal_bias="0.463"
            app:layout_constraintStart_toStartOf="@+id/tv_Waiter_Table_Detail_Name"
            app:layout_constraintTop_toBottomOf="@+id/tv_Waiter_Table_Detail_Name" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/orders_actives"
            android:textColor="@color/orange"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/tv_Waiter_Table_Detail_Order_Number"
            app:layout_constraintHorizontal_bias="0.458"
            app:layout_constraintStart_toStartOf="@+id/tv_Waiter_Table_Detail_Order_Number"
            app:layout_constraintTop_toBottomOf="@+id/tv_Waiter_Table_Detail_Order_Number" />

        <Button
            android:id="@+id/bt_Waiter_Table_Detail_NewOrder"
            style="@style/WaiterButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="52dp"
            android:text="@string/new_order"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/bt_Waiter_Table_Detail_SendOrders"
            style="@style/WaiterButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="@string/send_orders"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/bt_Waiter_Table_Detail_ViewOrders"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/bt_Waiter_Table_Detail_ViewOrders"
            style="@style/WaiterButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="@string/view_orders"
            app:layout_constraintBottom_toTopOf="@+id/bt_Waiter_Table_Detail_NewOrder"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>