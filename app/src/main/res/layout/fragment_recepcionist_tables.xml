<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/frameLayout3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Recepcionist.Tables.RecepcionistTablesFragment">


        <TextView
            android:id="@+id/tv_Receptionist_Table_Title"
            style="@style/HeaderText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:text="@string/receptionist"
            android:textAllCaps="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/bt_Receptionist_Table_Cancel"
            android:layout_width="40dp"
            android:layout_height="52dp"
            android:layout_marginEnd="16dp"
            android:backgroundTint="@color/cardview_shadow_end_color"
            android:drawableTop="@android:drawable/ic_menu_revert"
            app:iconPadding="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_Receptionist_Table_Title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_Receptionist_Table_Title"
            app:layout_constraintVertical_bias="0.571" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_recepcionist_tables"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="28dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_Receptionist_Table_Title" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>